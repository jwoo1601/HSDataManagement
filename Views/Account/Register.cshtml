@model RegisterViewModel

<div class="row mt-4">
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
        @if (!ViewContext.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>오류</strong>
                <div asp-validation-summary="All" class="danger"></div>
            </div>
        }
    </div>
</div>
<div class="row mt-2 mb-4">
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
        <form name="register" class="px-4 py-3 border border-2 border-light box-shadow"
              method="POST" action="/account/register" data-legacy>
            <div class="h3 my-3 text-center font-weight-bold">회원가입</div>
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                <label for="Username">아이디</label>
                <input type="text" class="form-control" name="Username" value="@Model.DefaultUsername" placeholder="아이디" />
            </div>
            <div class="form-group mb-3">
                <label for="Password">비밀번호</label>
                <input type="password" class="form-control" name="Password" placeholder="비밀번호" />
            </div>
            <div class="form-group mb-3">
                <label for="ConfirmPassword">비밀번호 확인</label>
                <input type="password" class="form-control" name="ConfirmPassword" placeholder="비밀번호 확인" />
            </div>
            <div class="form-group mb-3">
                <label for="Name">이름</label>
                <input type="text" class="form-control" name="Name" value="@Model.DefaultName" placeholder="이름" />
            </div>
            <label for="emailAddress">이메일</label>
            <div class="form-row mb-3" id="emailAddress">
                <div class="col-5">
                    <input type="text" class="form-control" name="Email" value="@Model.DefaultEmail" placeholder="이메일 아이디" data-ignore />
                </div>
                <div class="col-7 input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">@@</div>
                    </div>
                    <input type="text" class="form-control" name="EmailDomain" value="@Model.DefaultEmailDomain" placeholder="example.com" data-ignore />
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="SecurityCode">보안코드</label>
                <input type="text" class="form-control" name="SecurityCode" value="@Model.DefaultSecurityCode" placeholder="보안코드" />
            </div>

            <div class="form-row mt-4 mb-2">
                <div class="col-6 offset-3">
                    <input type="submit" class="btn btn-main w-100" value="회원가입" />
                </div>
            </div>
        </form>
    </div> <!--col-6 offset-6-->
</div> <!--row-->