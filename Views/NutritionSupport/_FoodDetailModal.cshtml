@model ModalViewModel

<div class="modal fade" id="@Model.Id" tabindex="-1" role="dialog"
     aria-labelledby="@(Model.Id)Title" aria-hidden="true" data-trigger-action="@Model.TriggerAction">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h3 class="modal-title" id="@(Model.Id)Title">@Model.Title</h3>
            </div>
            <div class="modal-body">
                <form name="@Model.FormName" class="px-3 py-2" method="@Model.Method" action="@Model.SubmitUrl">
                    @if (Model.HasAttribute("edit"))
                    {
                        <input type="hidden" name="id" />
                    }
                    <div class="form-row">
                        <div class="form-group col-8">
                            <label for="name">이름</label>
                            <input type="text" name="name" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="category">카테고리</label>
                        <select name="category" class="custom-select" required>
                            <option value="" selected>음식 카테고리 선택</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ingredients">재료</label>
                        <div class="d-flex justify-content-center" data-name="ingredients">
                            <button type="button" class="btn btn-submain w-100" data-action="select-ingredients">
                                재료 선택
                                <span class="badge badge-secondary ml-1" data-category="numIngredients"></span>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="note">노트</label>
                        <textarea class="form-control" rows="4" name="note" style="resize: none;"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-action="save">저장</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">취소</button>
            </div>
        </div>
    </div>
</div>