<div class="modal fade" tabindex="-1" id="loginModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title ml-2 font-weight-bold">로그인</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-auto m-auto">
                        <span class="px-3 py-1 rounded bg-submain text-white h4">효성제일건강센터</span>
                    </div>
                </div>
                <div class="row mt-4 mb-2">
                    <div class="col-10 offset-1">
                        <form name="login" class="px-4 py-3 border">
                            <div class="form-group mb-3">
                                <label for="username">아이디</label>
                                <input type="text" class="form-control" name="username" placeholder="아이디 혹은 이메일" />
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">비밀번호</label>
                                <input type="password" class="form-control" name="password" placeholder="비밀번호" />
                            </div>

                            <div class="form-row mt-4">
                                <div class="col-8 offset-2">
                                    <input type="submit" class="btn btn-success w-100" value="로그인" />
                                </div>
                            </div>
                        </form>
                    </div> <!--col-6 offset-6-->
                </div> <!--row-->
            </div> <!--modal-body-->
        </div> <!--modal-content-->
    </div> <!--modal-dialog-->
</div> <!--modal-->